{
  "compilerOptions": {
    // "strict": true,
    // support export default
    "esModuleInterop": true,
    // disable @types/* check
    // "typeRoots": [],
    // "baseUrl": ".",
    // "paths": {
    //   "@antv/f2": ["."]
    // },
    "target": "esnext",
    "declaration": true,
    "jsx": "react",
    "jsxFactory": "jsx",
    "jsxFragmentFactory": "Fragment",
    "moduleResolution": "node",
    "useDefineForClassFields": false,
    "resolveJsonModule": true
  },
  "include": ["./types/", "./types-test/"],
  "exclude": [
    "scripts",
    "node_modules",
    "**/test/**/*.ts",
    "**/test/**/*.tsx",
  ]
}
